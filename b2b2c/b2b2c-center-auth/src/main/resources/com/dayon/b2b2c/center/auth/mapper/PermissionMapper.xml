<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="com.dayon.b2b2c.center.auth.mapper.PermissionMapper">

	<resultMap id="Permission" type="com.dayon.b2b2c.api.auth.entity.Permission">
		<id property="id" column="c_id" />
		<result property="name" column="c_name" />
		<result property="servletPath" column="c_servlet_path" />
		<result property="isMenu" column="c_is_menu" />
		<result property="manageId" column="c_manage_id" />
		<result property="platformId" column="c_platform_id" />
		<result property="createTime" column="c_create_time" />
		<result property="createBy" column="c_create_by" />
		
	</resultMap>


	<select id="find" resultMap="Permission">
		select * from t_qx_permission
	</select>
	<select id="get" resultMap="Permission">
		select * from t_qx_permission where c_id=#{id}
	</select>
	<insert id="add" parameterType="com.dayon.b2b2c.api.auth.entity.Permission">
		insert into t_qx_permission(
		c_id,
		c_name,
		c_servlet_path,
		c_is_menu,
		c_manage_id,
		c_platform_id
		c_create_time,
		c_create_by
		 )
		 value
		 (
		 #{id},#{name},#{servletPath},#{isMenu},#{manageId},#{platformId},#{createTime},#{createBy}
		 )
	</insert>

</mapper>