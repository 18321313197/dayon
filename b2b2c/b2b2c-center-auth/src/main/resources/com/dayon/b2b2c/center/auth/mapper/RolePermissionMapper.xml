<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="com.dayon.b2b2c.center.auth.mapper.RolePermissionMapper">

	<resultMap id="RolePermission" type="com.dayon.b2b2c.api.auth.entity.RolePermission">
		<id property="id" column="c_id" />
		<result property="roleId" column="c_role_id" />
		<result property="PermissionId" column="c_permission_id" />
		<result property="platformId" column="c_platform_id" />
		<result property="createTime" column="c_create_time" />
		<result property="createBy" column="c_create_by" />
	</resultMap>


	<select id="find" resultMap="RolePermission">
		select * from t_qx_role_permission
	</select>
	<select id="get" resultMap="RolePermission">
		select * from t_qx_role_permission
		where c_id=#{id}
	</select>
	<insert id="add" parameterType="com.dayon.b2b2c.api.auth.entity.RolePermission">
		insert into t_qx_role_permission(
		c_id,
		c_role_id,
		c_permission_id,
		c_platform_id,
		c_create_time,
		c_create_by
		)
		value
		(
		#{id},#{roleId},#{permissionId},#{platformId},#{createTime},#{createBy}
		)
	</insert>

</mapper>