<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="com.dayon.b2b2c.center.auth.mapper.PlatformMapper">

	<resultMap id="Platform" type="com.dayon.b2b2c.api.auth.entity.Platform">
		<id property="id" column="c_id" />
		<result property="name" column="c_name" />
		<result property="note" column="c_note" />
		<result property="createTime" column="c_create_time" />
		<result property="createBy" column="c_create_by" />
	</resultMap>


	<select id="find" resultMap="Platform">
		select * from t_qx_platform
	</select>
	<select id="get" resultMap="Platform">
		select * from t_qx_platform where c_id=#{id}
	</select>
	<insert id="add" parameterType="com.dayon.b2b2c.api.auth.entity.Platform">
		insert into t_qx_platform(
		c_id,
		c_name,
		c_note,
		c_create_time,
		c_create_by
		 )
		 value
		 (
		 #{id},#{name},#{note},#{createTime},#{createBy}
		 )
	</insert>

</mapper>